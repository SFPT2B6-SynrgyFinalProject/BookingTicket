<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginHorizontal="8dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true"
    app:contentPadding="4dp"
    app:layout_constraintTop_toBottomOf="@+id/btnBack">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvSequenceNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginStart="15dp"
            android:text="@string/txt_sequence_number"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvPassengerName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginStart="10dp"
            android:text="@string/txt_passenger_name_2"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tvSequenceNumber"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvPassengerCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="15dp"
            android:text="@string/txt_passenger_category"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:paddingHorizontal="8dp"
            android:background="@color/primary_blue"
            app:layout_constraintTop_toTopOf="@+id/tvPassengerName"
            app:layout_constraintEnd_toEndOf="parent"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvDepartureTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txt_departure_city_4"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@+id/tvSequenceNumber"
            app:layout_constraintStart_toStartOf="@+id/tvPassengerName"/>

        <View
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_marginTop="9dp"
            android:layout_marginHorizontal="3dp"
            android:background="@color/neutral_08"
            app:layout_constraintTop_toTopOf="@+id/tvDepartureTime"
            app:layout_constraintStart_toEndOf="@+id/tvDepartureTime"
            app:layout_constraintEnd_toStartOf="@+id/tvArrivalTime"
            />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvArrivalTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="@string/txt_destination_4"
            android:textSize="14sp"
            app:layout_constraintTop_toTopOf="@+id/tvDepartureTime"
            app:layout_constraintStart_toEndOf="@+id/tvDepartureTime"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>